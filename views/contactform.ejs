  <% include partials/header %>
  
    <div class="container">
        <h1>Contact Us</h1>
        <form id="contact-form">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" placeholder="name@example.com" name="person[email]">
            </div>
            <div class="form-group">
                <label for="relationship">Relationship</label>
                <select class="form-control" id="relationship" name="person[relationship]">
                  <option>Parent</option>
                  <option>Guardian</option>
                  <option>Self</option>
                  <option>Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" id="message" rows="3" name="person[message]"></textarea>
            </div>
        </form>
    </div>
    
